{
  "builds": [
    {
      "src": "rapparel/wsgi.py",
      "use": "@vercel/python",
      "config": { 
        "maxLambdaSize": "15mb", 
        "runtime": "python3.9" 
      }
    },
    {
      "src": "staticfiles/**/*",
      "use": "@vercel/static"
    }
  ],
  
  "buildCommand": "python3 manage.py collectstatic --noinput && python3 manage.py migrate",
  
  "routes": [
    {
      "src": "/static/(.*)", 
      "dest": "/staticfiles/$1"
    },
    {
      "src": "/(.*)",
      "dest": "rapparel/wsgi.py"
    }
  ]
}
